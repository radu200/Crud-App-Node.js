    <div class="container-fluid">
      <div class="side-body">
         <div class="col-lg-12">
           <h1>Edit Product</h1>
           <hr>
  <form action="/product/edit/{{result.id}}" method="POST" enctype="multipart/form-data">
    <div class="form-group">
      <label>Name</label>
      <input type="text" class="form-control" placeholder="Enter name" name="title" value='{{result.title}}'>
    </div>
    <div class="form-group">
      <label>Description</label>
      <textarea class="form-control" rows="3" name="description" placeholder="Description">{{result.description}}</textarea>
    </div>
    <div class="form-group" id="avatarform">
      <input type="file" name="avatar" id="avatarInput" >
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>

