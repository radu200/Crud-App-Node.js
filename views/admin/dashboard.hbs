

<div class="row">
  <!-- uncomment code for absolute positioning tweek see top comment in css -->
  <!-- <div class="absolute-wrapper"> </div> -->
  <!-- Menu -->
  {{>admin-sidebar}}
  <!-- Main Content -->
  <div class="container-fluid">
    <div class="side-body">
      <div class=" col-sm-12 col-lg-10 ">
        <h1>Users</h1>
        {{#if success_msg}}
         {{#each success_msg}}
        <div role="alert" class="alert alert-success">
          <div>{{msg}}</div>
        </div>
        {{/each}} 
        {{/if}}
        <div class="panel panel-default">
          <div class="panel-heading main-color-bg">
            <h3 class="panel-title">Users</h3>
          </div>
          <div class="panel-body">
            <div class="row">
            </div>
            <br>
            <table class="table table-striped table-hover">
              <tr>
                <tr>
                  <th>User ID</th>
                  <th>User Name</th>
                  <th>Type</th>
                  <th>Date  Join</th>
                  <th>User Orders Page</th>
                  <th>User dashboard</th>
                  <th>Delete User Account</th>
                </tr>
              </tr>
              {{#each results}}
              <tr>
               <td>{{id}}</td>
               <td><a href="/user/{{id}}"> {{username}}</a></td>
                <td>{{type}}</td>
               <td>{{date}}</td>
               <td><a  class="btn btn-primary"  data-toggle="tooltip" data-placement="top" title="Redirect to user orders page"  href="/admin/user/orders/{{id}}">Orders</a></td>
               <td> <a  class="btn btn-primary" data-toggle="tooltip" data-placement="top" title="Redirect to user dashboard" href="/admin/user/dashboard/{{id}}">Dashboard</a></td>
               <td>
                <form method="POST" class='delete-product-btn' action="/admin/user/delete/{{id}}?_method=DELETE" >
                     <input type="hidden" name="_csrf" value="{{csrfToken}}">
                     <button class="btn btn-danger glyphicon glyphicon-trash"  type='submit' value='delete' 
                    data-toggle="tooltip" data-placement="top" title="Delete User account"></button>
                    </form>
                </td>
              </tr>
              {{/each}}
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>