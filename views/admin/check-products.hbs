<div class="row">
  <!-- uncomment code for absolute positioning tweek see top comment in css -->
  <!-- <div class="absolute-wrapper"> </div> -->
  <!-- Menu -->
  {{>admin-sidebar}}
  <!-- Main Content -->
  <div class="container-fluid">
    <div class="side-body">
      <div class=" col-sm-12 col-lg-10 ">
        <h1>Approve Products</h1>
        {{#if success_msg}} {{#each success_msg}}
        <div role="alert" class="alert alert-success">
          <div>{{msg}}</div>
        </div>
        {{/each}} {{/if}}
        <div class="panel panel-default">
          <div class="panel-heading ">
            <h3 class="panel-title">Products</h3>
          </div>
          <div class="panel-body">
            <div class="row">

            </div>
            <br>
            <div class="table-responsive">
              <table class="table table-striped table-hover ">
                <tr>
                    <th>Product ID</th>
                    <th>Product Image</th>
                    <th>Seller Name</th>
                    <th>Date added</th>
                    <th>Price</th>
                </tr>
                {{#each result}}
                <tr>
                  <td>
                    <a class="btn btn-primary" data-toggle="tooltip" data-placement="top" title="Redirects to product detail page"
                      href="/product/{{productId}}">{{productId}}</a>
                  </td>
                  <td>
                    <img class="product-list-image" src="/userFiles/productImages/{{this.image}}" alt="">
                  </td>
                  <td>
                    <a data-toggle="tooltip" data-placement="top" title="Redirects to user profile" href="/user/{{user_id}}">{{username}}</a>
                  </td>
                  <td>{{date}}</td>
                  <td>${{price}}.00</td>
                  <td>
                    <form method="POST" class='approve-product-btn' action="/admin/product/approve">
                      <button class="btn btn-success " type='submit' value='Approve' data-toggle="tooltip" data-placement="top" title="Approve">ok</button>
                    </form>
                    <!--edit button-->
                    <a data-toggle="tooltip" data-placement="top" title="Edit!" class="btn btn-primary glyphicon glyphicon-pencil" href="/product/edit/{{id}}"></a>
                    <!--delete button-->
                    <form method="POST" class='delete-product-btn' action="/product/delete/{{productId}}?_method=DELETE">
                      <button class="btn btn-danger glyphicon glyphicon-trash" type='submit' value='delete' data-toggle="tooltip" data-placement="top"
                        title="Delete"></button>
                    </form>
                  </td>
                </tr>
                {{/each}}
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>