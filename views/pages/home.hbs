
{{>navbar}} 
<div class="container-main-page">
{{>departments}}
  <div class="products-wrapper">
     
        {{#each result}}         
       <div class="card">
      <div class="card-header">
        <img src="/userFiles/productImages/{{this.image}}" alt="No image available">
      </div>
      <div class="card-body">
        <h4 class="card-title">
          <a href="/products/{{id}}">{{title}}</a>
        </h4>
        <p>{{date}}</p>
        <h3>{{price}}</h3>
        <p class="card-description">{{description}} </p>
      </div>
      <div class="card-footer">
        <a href="/product/{{id}}" class="card-btn-details">View Details</a>
      </div>
    </div>
  {{/each}}

  </div>
  </div>
