                <div class="form-group">
                  <label>Confirm new password </label>
                  <input type="text" class="form-control form-control-lg" placeholder="Confirm new password" name="confirm-new-password">
                </div>
              </div>
            </div> 
         <button type="submit" class="btn btn-default">Update password</button>
             <a class="pull-right" href=""> I forgot my password</a>
            </div>         
            </form>
          </div>
        </div>
      </div>
    </div>
