        <!-- Main Content -->
    <div class="container-fluid">
        <div class="side-body">
            <div class="col-lg-10">
        <h3>Change Password</h3>
     
        <div class="panel panel-default">
          
            <form method="POST" action="/settings/password/user_basic" enctype="form-data">
          <div class="panel-body">
             <a href="/dashboard/user_basic" class="btn btn-default pull-right " type="submit" name="submit" data-toggle="tooltip" data-placement="top" title="Cancel"><i class="fa fa-share" style="color:black" ></i></a>
