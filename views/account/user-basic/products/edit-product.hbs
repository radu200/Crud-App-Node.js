<div class="row">

  {{>sidebar-admin}}
  <!-- Main Content -->
  <div class="container-fluid">
    <div class="side-body">
      <div class="col-lg-12">

        <h1>Edit Product</h1>
        <hr>
        <hr> {{#if errors}} {{#each errors}}
        <div class="alert alert-danger">
          {{msg}}
        </div>
        {{/each}} {{/if}} {{#if success_msg}} 
        {{#each succes_msg}}
        <div class="alert alert-success">
          {{msg}}
        </div>
        {{/each}} {{/if}}
        
        <div class="panel panel-default">
          <div class="panel-heading main-color-bg">
              <h3 class="panel-title"> Edit Product</h3>
          </div>
          <div class="panel-body">
        <a href="user-basic/product/list" class="btn btn-default pull-right " type="submit" name="submit" data-toggle="tooltip" data-placement="top" title="Cancel"><i class="fa fa-share" style="color:black" ></i></a>
            <br>
          <form action="/user-basic/product/edit/{{result.id}}" method="POST" enctype="multipart/form-data" >
            <div class="form-group">
              <label>Name</label>
              <input type="text" class="form-control" placeholder="Enter name" name="title" value={{result.title}}>
            </div>
            <div class="form-group">
              <label>Description</label>
              <textarea class="form-control" rows="3" name="description" placeholder="Description">{{result.description}}</textarea>
            </div>
             <div class="form-group">
              <label>Price</label>
              <input type="text" class="form-control" placeholder="Enter name" name="price" value={{result.price}}>
            </div>
             <div class="form-group">
              <label>keywords</label>
              <input type="text" class="form-control" placeholder="Enter name" name="keywords" value='{{result.keywords}}'>
            </div>


            <!--input to update product image-->
           <div class="wrapperAvatar">
            <img class="avatarImage " src="/userFiles/products/images/{{result.image}}" alt="no image"  />
              
            </div>
            <input type="file" name="productImage" class="avatarInput">
            <br>
            <button type="submit" class="btn btn-default">Save</button>
          </form>
             
        </div>
      </div>
    </div>
  </div>