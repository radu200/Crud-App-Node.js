<div class="row">
  <!-- uncomment code for absolute positioning tweek see top comment in css -->
  <!-- <div class="absolute-wrapper"> </div> -->
  <!-- Menu -->
  {{>admin-sidebar-user-basic}}
  <!-- Main Content -->
  <div class="container-fluid">
    <div class="side-body">
      <div class=" col-sm-12 col-lg-10 ">
        <h1>Your Products</h1>
        {{#if success_msg}}
         {{#each success_msg}}
        <div role="alert" class="alert alert-success">
          <div>{{msg}}</div>
        </div>
        {{/each}} 
        {{/if}}
        <div class="panel panel-default">
          <div class="panel-heading main-color-bg">
            <h3 class="panel-title">Products</h3>
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-md-12">
                <input class="form-control" type="text" placeholder="Filter products...">
              </div>
            </div>
            <br>
            <table class="table table-striped table-hover">
              <tr>
                <tr>
                  <th>ID</th>
                  <th>ProductName</th>
                  <th>Price</th>
                  <th>
                  <a data-toggle="tooltip" data-placement="top" title="Add New!" class="btn btn-primary glyphicon glyphicon-plus" href="/user-basic/product/add"></a>
               </th>
                </tr>
              </tr>
              <tr>
                <td>1</td>
                <td>Apple</td>
                <td>$200</td>
                <td>
                    <!--edit button-->
                  <a data-toggle="tooltip" data-placement="top" title="Edit!" class="btn btn-primary glyphicon glyphicon-pencil"
                    href="/user-basic/product/edit"></a>
                   <!--delete button-->
                  <a class="btn btn-danger glyphicon glyphicon-trash" id="delete-product" type='submit' value='delete' href="#" data-id="{{id}}"
                    data-toggle="tooltip" data-placement="top" title="Delete"></a>
                </td>
              </tr>
            </table>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>