<div class="row">
  <!--imported from  partials folder-->
  {{>user-dashboard-sidebar}}

  <!-- Main Content -->
  <div class="container-fluid">
    <div class="side-body">

      <div class="col-lg-10">
        <h3>Change Email</h3>
        {{#if error_msg}} {{#each error_msg}}
        <div class="alert alert-danger">
          {{msg}}
        </div>
        {{/each}} {{/if}} {{#if success_msg}} {{#each success_msg}}
        <div class="alert alert-success">
          {{msg}}
        </div>
        {{/each}} {{/if}} {{#if warning_msg}} {{#each warning_msg}}
        <div class="warning_msg">
          {{msg}}
        </div>
        {{/each}} {{/if}}

        <div class="panel panel-default">
          <div class="panel-heading">

            <p class="panel-title">Change Email</p>
          </div>
          <form method="POST" action="/email/change">
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <div class="panel-body">
              <a href="/dashboard" class="btn btn-default pull-right " type="submit" name="submit" data-toggle="tooltip" data-placement="top"
                title="Cancel">
                <i class="fa fa-share" style="color:black"></i>
              </a>
              <button class="btn btn-primary pull-right" type="submit" name="submit" data-toggle="tooltip" data-placement="top" title="Save">
                <i class="fa fa-save"></i>
              </button>
              <div class="tab-content">
                <div class="tab-pane active" id="general" role="tabpanel">
                  <br>
                  <div class="form-group">
                    <label for=""></label>
                    <p>Use the form below to change the e-mail address for your account. Use the new address the next time you
                      log in or place an order.</p>
                  </div>
                  <div class="form-group">
                    <label>Old e-mail:</label>
                    <p>{{result.email}}</p>
                  </div>
                  <div class="form-group">
                    <label>New E-mail:</label>
                    <input type="email" class="form-control form-control-lg" name="newEmail" required="true">
                  </div>
                  <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control form-control-lg" name="password" required="true">
                  </div>
                </div>
                <button type="submit" class="btn btn-default">Save Changes</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
</div>