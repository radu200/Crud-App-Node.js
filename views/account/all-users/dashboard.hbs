<div class="row">
   <!--imported from  partials folder-->
  {{>user-dashboard-sidebar}}

        <!-- Main Content -->
        <div class="container-fluid">
            <div class="side-body">
                <div class="col-lg-12">
                     {{#if info_msg}}
                        {{#each info_msg}}
                        <br>   
                        <div class="alert-info_msg">{{msg}}</div> 
                        {{/each}}
                    {{/if}}
                        {{#if error_msg}}
                        {{#each error_msg}}
                        <br>   
                        <div class="alert-error_msg">{{msg}}</div> 
                        {{/each}}
                    {{/if}}
                        {{#if success_msg}} 
                            {{#each success_msg}}
                            <br> 
                        <div class="alert-success_msg">{{msg}}</div> 
                    {{/each}}
                    {{/if}}
                    <h1>DASHBOARD  </h1>
                    <div class="panel panel-default">
                        <div class="panel-heading main-color-bg">
                            <h3 class="panel-title"> Overview</h3>
                        </div>
                        <div class="panel-body">
                        
                            <div class="col-md-4">
                                <div class="well dash-box">
                                    <h2>
                                        <span  aria-hidden="true"></span> ${{totalRevenue}}.00</h2>
                                    <h4>Revenue</h4>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="well dash-box">
                                    <h2>
                                        <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> {{productsSold}}</h2>
                                    <h4>Products sold</h4>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="well dash-box">
                                    <h2>
                                        <span class="glyphicon glyphicon-user" aria-hidden="true"></span> {{totalCustomers}}</h2>
                                    <h4>Customers</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="  col-lg-12 ">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">World Map</h3>
                        </div>
                        <div class="panel-body">
                            <div id="map"></div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Sales Analytics</h3>
                        </div>
                        <div class="panel-body">
                          <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <tr>
                                    <th>Product Title</th>
                                     <th>Product Price</th>
                                     <th>Total Price</th>
                                     <th>Product Qty</th>
                                    <th>Customer Name</th>
                                    <th>Customer-Country</th>
                                      <th>Date</th>
                                </tr>
                            {{#each results}}
                               
                                <tr>
                                    <td><a href="/product/{{product_id}}">{{product_title}}</a></td>
                                    <td>${{product_price}}.00</td>
                                    <td>${{totalPrice }}.00</td>
                                      <td>{{product_qty}}</td>
                                    <td>{{username}}</td>
                                    <td>{{customer_country}}</td>
                                    <td>{{date}}</td>
                                </tr>
                                
                       {{/each}}
                            </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        </div>