<div class="row">
   <!--imported from  partials folder-->
   {{>dashboard-sidebar}}

        <!-- Main Content -->
        <div class="container-fluid">
            <div class="side-body">
                <div class="col-lg-12">
                    <h1>DASHBOARD  </h1>
                    <div class="panel panel-default">
                        <div class="panel-heading main-color-bg">
                            <h3 class="panel-title"> Overview</h3>
                        </div>
                        <div class="panel-body">
                            <div class="col-md-3">
                                <div class="well dash-box">
                                    <h2>
                                        <span class="glyphicon glyphicon-cloud" aria-hidden="true"></span> 50%</h2>
                                    <h4>Disk Usage</h4>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="well dash-box">
                                    <h2>
                                        <span  aria-hidden="true"></span> ${{totalRevenue}}</h2>
                                    <h4>Revenue</h4>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="well dash-box">
                                    <h2>
                                        <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> {{productsSold}}</h2>
                                    <h4>Products sold</h4>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="well dash-box">
                                    <h2>
                                        <span class="glyphicon glyphicon-user" aria-hidden="true"></span> {{totalCustomers}}</h2>
                                    <h4>Customers</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="  col-lg-12 ">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">World Map</h3>
                        </div>
                        <div class="panel-body">
                            <div id="map"></div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Sales Analytics</h3>
                        </div>
                        <div class="panel-body">

                            <table class="table table-striped table-hover">
                                <tr>
                                    <th>Product Title</th>
                                     <th>Product Price</th>
                                     <th>Total Price</th>
                                     <th>Product Qty</th>
                                    <th>Customer Name</th>
                                    <th>Customer-Country</th>
                                      <th>Date</th>
                                </tr>
                            {{#each results}}
                               
                                <tr>
                                    <td><a href="/product/{{product_id}}">{{product_title}}</a></td>
                                    <td>${{product_price}}</td>
                                    <td>${{totalPrice }}</td>
                                      <td>{{product_qty}}</td>
                                    <td>{{username}}</td>
                                    <td>{{customer_country}}</td>
                                    <td>{{date}}</td>
                                </tr>
                                
                       {{/each}}
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        </div>