<div class="row">

  {{>sidebar-admin}}
  <!-- Main Content -->
  <div class="container-fluid">
    <div class="side-body">
      <div class="col-lg-10">
        <h1>Add Product</h1>
        <hr> {{#if errors}} 
        {{#each errors}}
        <div class="alert alert-danger">
          {{msg}}
        </div>
        {{/each}} 
        {{/if}} 
        {{#if success_msg}} 
        {{#each success_msg}}
        <div class="alert alert-success">
          {{msg}}
        </div>
        {{/each}} {{/if}}
        <div class="panel panel-default">
          <div class="panel-heading">
            <form method="POST" action="/product/add" enctype="multipart/form-data">
              <h3 class="panel-title">Add Product</h3>
          </div>
          <div class="panel-body">
            <ul class="nav nav-tabs" role="tablist">
              <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#general" role="tab">General</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#thumnails" role="tab">Aditional Images</a>
              </li>

              </li>
             <a href="/product_stats" class="btn btn-default pull-right " type="submit" name="submit" data-toggle="tooltip" data-placement="top" title="Cancel"><i class="fa fa-share" style="color:black" ></i></a>
              <button class="btn btn-primary pull-right" type="submit" name="submit" data-toggle="tooltip" data-placement="top" title="Save">
                <i class="fa fa-save"></i>
              </button>
            </ul>
            <div class="tab-content">
              <div class="tab-pane active" id="general" role="tabpanel">
                <br>
                <div class="form-group">
                  <label>Name</label>
                  <input type="text" class="form-control form-control-lg" placeholder="Enter product title" name="title">
                </div>
                <div class="form-group">
                  <label>Description</label>
                  <textarea class="form-control" rows="3" name="description" placeholder="Description"></textarea>
                </div>
                 <div class="form-group">
                  <label>Price</label>
                  <input type="text" class="form-control form-control-lg" placeholder="Enter product price" name="price">
                </div>
                 <div class="form-group">
                  <label>keywords</label>
                  <input type="text" class="form-control form-control-lg" placeholder="Enter product keywords" name="keywords">
                </div>
                 <label for="">Add Image</label>
                  <div class="form-group" id="avatarform">
                    <input type="file" name="avatar" id="avatarInput">
                  </div>
              </div>
                <br>
                <div class="tab-pane" id="profile" role="tabpanel">
                </div>
            </div>
          
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div>
  </div>
</div>
</div>
</div>
</div>