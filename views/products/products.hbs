{{>navbar}} 
<div class="container-main-page">
{{>departments}}
  <div id="products-wrapper">
        {{#each results}}         
          <div class="card">
            <div class="card-img">
              <img  src="/images/{{this.image}}"  alt="" >
              </div>
              <div class="card-body">
                <h4 class="card-title"><a href="/products/{{id}}">{{title}}</a></h4>
                <p>Posted by {{email}}</p>
                <h3>${{price}}</h3>
               <p class="card-description">{{description}}</p>
            </div>
              <a href="/product/{{id}}" class="card-btn-details">View Details</a>
          </div>
          
  {{/each}}
</div>
  </div>
