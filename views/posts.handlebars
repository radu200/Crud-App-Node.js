<div class="container">
  {{#if errors}}
    {{#each errors}}
      <div class="alert alert-danger">
        {{msg}}
      </div>
    {{/each}}
  {{/if}}
  {{#if success}}
    {{#each messages.success}}
      <div class="alert alert-success">
        {{msg}}
      </div>
    {{/each}}
  {{/if}}
  <section id="products">
    <div class="container">
      <div class="row">
        {{#each results}}
          <div class=" col-sm-6 col-md-6 mb-4">
            <div class="card ">
              <img class="card-img-top" src="/images/{{this.image}}"  alt="" >
              <div class="card-body">
                <h4 class="card-title"><a href="/posts/{{id}}">{{title}}</a></h4>
                <h5class="pull-right">$699.99</h5>
                <p class="card-text">{{description}}</p>
              </div>
               <div class="card-footer ">
              <a href="/posts/{{id}}" class=" btn btn-primary btn-large">View Details</a>
              <a href="#" class="btn btn-success">ADD TO CART</a>
                </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </section>
</div>
